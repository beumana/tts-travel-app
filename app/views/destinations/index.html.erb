<p class="notice"><%= notice %></p>

<ul class="nav nav-pills" role="tablist">
<li><%= link_to "All", destinations_path, class: "active" %></li>
<li><%= link_to "New Zealand test", controller: "destinations", country: "new_zealand" %></li>
<% @my_countries.each do |c| %>
<li><%= link_to "#{c.country}", controller: "destinations", country: "#{c.country}" %></li>
<% end %>
</ul>


<h1>Listing Destinations</h1>

<div class="row">
  <% @destinations.each do |destination| %>
  <div class="col-md-3 col-sm-6">
    <div class="panel panel-default">
      
      <div class="panel-body">
          <h2><%= destination.city %></h2>
          <%= image_tag destination.avatar.url(:thumb) %>
          <h3><%= destination.country %></h3>
          <p><%= destination.population %></p>
          <p><%= destination.description %></p>
      </div>
      <div class="btn-group">
          <%= link_to 'Show', destination, class:"btn btn-default" %>
          <%= link_to 'Edit', edit_destination_path(destination), class:"btn btn-default" %>
          <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Destination', new_destination_path %>
